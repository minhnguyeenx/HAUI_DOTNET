        <Button x:Name="btn3" Content="&lt;&#xD;&#xA;" HorizontalAlignment="Center" Height="28" VerticalAlignment="Top" Width="94" FontSize="20" Click="btn3_Click" Margin="0,267,0,0"/>
        <Button x:Name="btn4" Content="&lt;&lt;&#xD;&#xA;" HorizontalAlignment="Center" Height="28" VerticalAlignment="Top" Width="94" Margin="0,332,0,0" FontSize="20" Click="btn4_Click"/>
